@model Profissional

<h1>Editar suas informações</h1>

<form asp-action="edit">

    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Sobrenome"></label>
        <input asp-for="Sobrenome" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Crm"></label>
        <input asp-for="Crm" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Especialidade"></label>
        <select asp-for="Especialidade" asp-items="@Html.GetEnumSelectList<Especialidade>()" class="form-select" required="true">
            <option>Selecione</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" required="true" />
    </div>
    <input type="hidden" asp-for="Id" class="form-control" required="true" />
    <input type="hidden" asp-for="Login.Id" class="form-control" required="true" />
    <input type="hidden" asp-for="Login.Email" class="form-control" required="true" />
    <input type="hidden" asp-for="Login.Senha" class="form-control" required="true" />

    <button class="btn btn-primary">Editar</button>

</form>