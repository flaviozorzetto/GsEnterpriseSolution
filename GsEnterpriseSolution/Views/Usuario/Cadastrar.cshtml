@model Usuario

<h1>Cadastrar suas informações</h1>

<form asp-action="cadastrar">

    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Sobrenome"></label>
        <input asp-for="Sobrenome" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Peso"></label>
        <input asp-for="Peso" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Sexo"></label>
        <select asp-for="Sexo" asp-items="@Html.GetEnumSelectList<Sexo>()" class="form-select" required="true">
            <option>Selecione</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Altura"></label>
        <input asp-for="Altura" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Endereco.Logradouro"></label>
        <input asp-for="Endereco.Logradouro" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Endereco.Numero"></label>
        <input asp-for="Endereco.Numero" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Endereco.Bairro"></label>
        <input asp-for="Endereco.Bairro" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Endereco.Cidade"></label>
        <input asp-for="Endereco.Cidade" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Endereco.Estado"></label>
        <input asp-for="Endereco.Estado" class="form-control" required="true" />
    </div>
    <div class="mb-3">
        <label asp-for="Endereco.Cep"></label>
        <input asp-for="Endereco.Cep" class="form-control" required="true" />
    </div>
    <input type="hidden" asp-for="Login.Id" value="@TempData["loginId"]" class="form-control" required="true" />

    <button class="btn btn-primary">Cadastrar</button>

</form>